<?xml version="1.0" encoding="utf-8"?><!-- TODO change recycler_item_topic ids for recycler_topic_asdasd -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/recycler_card_padding">

        <TextView
            android:id="@+id/recycler_chart_state_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="end"
            android:text="@string/loading_text"
            android:textSize="@dimen/recycler_min_font_size" />

        <!-- TODO Check if set as Single Line -->
        <TextView
            android:id="@+id/recycler_chart_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_text"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_item_separator_height"
            android:layout_marginBottom="@dimen/recycler_item_separator_margin_upsides"
            android:layout_marginTop="@dimen/recycler_item_separator_margin_upsides"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_chart_election_date_message"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_chart_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_chart_texts_margin_start"
                android:layout_marginStart="@dimen/recycler_chart_texts_margin_start"
                android:text="@string/loading_text"
                android:textSize="@dimen/recycler_min_min_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_chart_poll_count_message"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_chart_count_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_chart_texts_margin_start"
                android:layout_marginStart="@dimen/recycler_chart_texts_margin_start"
                android:text="@string/loading_text"
                android:textSize="@dimen/recycler_min_min_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recycler_chart_last_updated_message"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_chart_updated_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recycler_chart_texts_margin_start"
                android:layout_marginStart="@dimen/recycler_chart_texts_margin_start"
                android:text="@string/loading_text"
                android:textSize="@dimen/recycler_min_min_font_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/recycler_item_separator_height"
            android:layout_marginBottom="@dimen/recycler_item_separator_margin_upsides"
            android:layout_marginTop="@dimen/recycler_item_separator_margin_upsides"
            android:background="@color/colorLightGray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycler_chart_winner_name_txt"
                android:text="@string/loading_text"
                android:textStyle="bold"
                android:textSize="@dimen/recycler_almostmin_min_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recycler_chart_winner_value_txt"
                android:text="@string/loading_text"
                android:layout_marginLeft="@dimen/recycler_chart_texts_margin_start"
                android:layout_marginStart="@dimen/recycler_chart_texts_margin_start"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycler_chart_loser_name_txt"
                android:text="@string/loading_text"
                android:textStyle="bold"
                android:textSize="@dimen/recycler_almostmin_min_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recycler_chart_loser_value_txt"
                android:text="@string/loading_text"
                android:layout_marginLeft="@dimen/recycler_chart_texts_margin_start"
                android:layout_marginStart="@dimen/recycler_chart_texts_margin_start"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>