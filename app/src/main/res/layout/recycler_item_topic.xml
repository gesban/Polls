<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/recycler_card_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/recycler_topic_description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_text"
                android:textSize="@dimen/recycler_min_font_size" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:contentDescription="@string/recycler_item_forward_description"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:tint="@color/colorDarkGray"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_arrow_forward_black_48dp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/recycler_topic_delimiter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loading_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_topic_year_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/loading_text"
                android:textSize="@dimen/recycler_min_font_size" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>