<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/recycler_card_small_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recycler_candidate_position_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/recycler_min_min_font_size"
                android:text="@string/loading_text" />

            <TextView
                android:id="@+id/recycler_candidate_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="@dimen/recycler_min_font_size"
                android:gravity="start"
                android:text="@string/loading_text" />

            <TextView
                android:id="@+id/recycler_candidate_value_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/recycler_almostmin_min_font_size"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:gravity="end"
                android:text="@string/loading_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/recycler_candidate_party_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/loading_text"
            android:textSize="@dimen/recycler_min_min_font_size"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>